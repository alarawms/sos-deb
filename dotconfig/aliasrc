[ -x "$(command -v doas)" ] && [ -e /etc/doas.conf ] && ld="doas"
[ -x "$(command -v sudo)" ] && ld="sudo"
#[ -x "$(command -v nvim)" ] && alias vim="nvim"

# Sudo or doas not required for some system commands
for command in mount umount systemctl updatedb su shutdown reboot poweroff rc-update rc-service; do
    alias $command="$ld $command"
    done; unset command
alias sx='startx'
alias gs='git status'
alias ga='git add'
alias gcm='git commit -m'
alias gp='git push'
alias gd='git diff'
alias e='$EDITOR'
alias v='$EDITOR'
alias sai='$ld apt install'
alias dai='$ld apt install'
alias sainir='$ld apt install --no-install-recommends'
alias dainir='$ld apt install --no-install-recommends'
alias sau='$ld apt update -yy && $ld apt upgrade'
alias dau='$ld apt update -yy && $ld apt upgrade'
alias ls='exa --icons'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias ll='exa --icons -lghb'
alias la='exa --icons -lghba'
alias ls.='exa --icons -a | grep "\."'
alias mrg='xrdb -merge ~/.config/x11/.Xresources'
alias mkdir='mkdir -pv'
alias ..='cd ..'
alias ...='cd ../..'
alias q='exit'
alias :q='exit'
alias :wq='exit'
alias h='cd ~/'
alias df='df -h -x squashfs -x tmpfs -x devtmpfs'
alias extip='curl icanhazip.com'
alias val='cd ~/.config/bash && $EDITOR aliasrc'
alias vbm='$EDITOR ~/.config/bookmarks'
alias cv='cd ~/.config/nvim'
alias vv='cd ~/.config/nvim/ && $EDITOR init.vim'
alias cq='cd ~/.config/qtile'
alias vq='cd ~/.config/qtile && $EDITOR config.py'
alias cf='cd ~/.config/vifm'
alias vf='cd ~/.config/vifm && $EDITOR vifmrc'
alias cx='cd ~/.config/x11/'
alias vxi='$EDITOR ~/.xinitrc'
alias vxp='cd ~/.config/x11 && $EDITOR xprofile'
alias cz='cd ~/.config/zsh'
alias vz='cd ~/.config/zsh && $EDITOR .zshrc'
alias vzp='cd ~/.config/zsh && $EDITOR .zprofile'
alias vb='$EDITOR ~/.bashrc'
alias vk='cd ~/.config/kitty/ && $EDITOR kitty.conf'
alias vsp='$EDITOR ~/.config/spectrwm/spectrwm.conf'
alias vzrc='$EDITOR ~/.config/zsh/.zshrc'
alias vst='cd ~/.local/src/st && $EDITOR config.def.h'
alias vdwm='cd ~/.local/src/dwm && $EDITOR config.def.h'
alias vsl='cd ~/.local/src/slstatus/ && $EDITOR config.def.h'
alias svgpng='inkscape --export-type"png"'
alias zrc='source ~/.config/zsh/.zshrc'
